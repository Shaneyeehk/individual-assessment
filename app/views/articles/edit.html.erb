<h1>This is the editing article page</h1>

<%= render 'articles/article' %>

<%= form_for @article, url: article_path(@article), method: :patch do |f| %>
	
	<% if @article.errors.any? %>
		<div>
			<h5>
				<%= pluralize(@article.errors.count, "There has been an error")%>
				This might be why it happened:
			</h5>

			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :Title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :"Description" %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :"Author" %>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.submit "Update" %>
	</p>

<% end %>

<%= link_to 'Back', user_articles_path %>